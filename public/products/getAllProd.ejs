<section class="container d-flex row justify-content-around">
	<% products.forEach(function(product) { %>
	<div class="col-md-6 col-xl-3">
		<div class="card border-0 p-5">
			<img
				src="<%=product.thumbnail%>"
				class="card-img-top"
				alt="<%= product.title %>"
			/>
			<div
				class="card-body d-flex align-items-center flex-column justify-content-around"
			>
				<h5 class="fs-6"><%= product.title %></h5>
				<p class="card-text text-secondary">$U <%= product.price %></p>
				<a
					href="http://localhost:8585/api/v1/productos/id/<%= product._id %>"
					class="btn btn-outline-dark"
					>Ver producto</a
				>
				<form
					action="/api/v1/carrito/<%=userCart%>/productos"
					method="post"
				>
					<button
						class="btn btn-dark mt-3"
						type="submit"
						name="_id"
						value="<%=product._id %>"
					>
						Agregar al carrito
					</button>
				</form>
			</div>
		</div>
	</div>
	<% }); %>
	<hr />
</section>
